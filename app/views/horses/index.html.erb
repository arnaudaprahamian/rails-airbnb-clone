<%= simple_form_for :search, html: { class: "form-inline"}, url: horses_path, method: :get do |f| %>
  <%= f.input :address, label: "Adresse" %>
  <%= f.input :race, collection: Horse.races %>
  <%= f.input :begin_date, as: :date, label: "Date de dÃ©but" %>
  <%= f.input :final_date, as: :date, label: "Date de fin" %>
  <%= f.button :submit, class: "btn btn-primary", value: "Rechercher" %>
<% end %>

<div class="content">
  <div class="container">
    <h1 class = "text-center">Nos beaux chevaux</h1>
    <div class ="row">
      <div class="col-xs-6">
        <div class ="row">
         <% if @horses.blank? %>
          <h4>There are no horses containing the term <%= params[:search] %>.</h4>
         <% else %>
          <% @horses.each do |horse| %>
          <div class="col-xs-12 col-sm-6">
            <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
            url('<%= cl_image_path horse.horse_pic.path, height: 300, width: 400, crop: :fill %>')">
              <div class="card-description">
                <h2><%= horse.name.capitalize %></h2>
                <p><%= horse.title.capitalize %></p>
              </div>
              <%= link_to "See details", horse, class:"card-link"%>
            </div>
          </div>
          <% end %>
        <% end %>
        </div>
      </div>
      <div class="col-xs-6">
        <div id="map"></div>
      </div>
    </div>
  </div>
</div>

<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).ready(function() {
      var handler = Gmaps.build('Google');
      handler.buildMap({ internal: { id: 'map' } }, function() {
        markers = handler.addMarkers(<%= raw @hash.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
        if (markers.length == 0) {
          handler.getMap().setZoom(2);
        } else if (markers.length == 1) {
          handler.getMap().setZoom(14);
        }
      });
    });
  <% end %>
<% end %>
