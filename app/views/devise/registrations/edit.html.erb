<div class="container">
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">

  <h2>Edit <%= resource_name.to_s.humanize %></h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :first_name, label: "PrÃ©nom" %>
      <%= f.input :last_name, label: "Nom" %>
      <%= f.input :sexe, collection: %w(Femme Homme) %>
      <%= f.input :birth_date, label: "Date de naissance" %>
      <%= f.input :level, label: "Galop", input_html: { min: '0', max: '9' } %>
      <%= f.input :email, required: true, autofocus: true %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>

      <%= f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false, label: "Nouveau mot de passe" %>
      <%= f.input :password_confirmation, required: false, label: "Confirmation du mot de passe" %>
      <%= f.input :current_password, hint: "we need your current password to confirm your changes", required: true, label: "Mot de passe actuel" %>
      <%= f.input :photo, as: :attachinary, label: "Photo de profil" %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Update" %>
    </div>
  <% end %>

  <h3>Supprimer mon compte</h3>

  <p>Unhappy? <%= link_to "Supprimer", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

  <%= link_to "Back", :back %>
    </div>
  </div>
</div>


