<div class="container">
  <h2>Sign up</h2>

  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :first_name, label: "Prénom" %>
          <%= f.input :last_name, label: "Nom" %>
          <%= f.input :sexe, collection: %w(Femme Homme) %>
          <%= f.input :birth_date, label: "Date de naissance" %>
          <%= f.input :level, label: "Galop", input_html: { min: '0', max: '9' } %>
          <%= f.input :email, required: true, autofocus: true %>
          <%= f.input :password, required: true, hint: ("#{@minimum_password_length} caractères minimum" if @minimum_password_length), label: "Mot de passe" %>
          <%= f.input :password_confirmation, required: true, label: "Confirmation du mot de passe" %>
          <%= f.input :photo, as: :attachinary, label: "Photo de profil" %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Sign up" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>


